- error = @configuracion.errors.include?(:umbral)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :umbral, :class => 'control-label'
  .controls
    =f.text_field :umbral, :class => 'input-xlarge input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:umbral, :class => 'text-error') : ""

.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:configuraciones, :index), :class => 'btn'
