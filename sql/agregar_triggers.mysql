/*
 * Crear el trigger que calcula la concentraci√≥n y la inserta en la
 * tabla de mediciones
 * Necesita permisos de root.
 */
drop trigger insert_concentracion;
create trigger insert_concentracion before insert on historical
for each row
begin
  insert into mediciones (created_at, grd, concentracion)
  select NEW.timestamp, NEW.grd_id, (NEW.value - aparatos.cero) / aparatos.escala / 1000
  from aparatos where NEW.grd_id = grd;
end


